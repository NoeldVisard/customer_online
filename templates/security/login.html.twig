{% extends 'base.html.twig' %}

{% block title %}Авторизоваться!{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
            <div class="col-md-4 col-sm-4 col-xs-12 rounded justify-content-center align-items-center login-form">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}


                    <h1 class="h3 mb-3 font-weight-normal">Войдите в аккаунт</h1>
                    <label for="username">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                           autocomplete="email" required autofocus>
                    <label for="password">Password</label>
                    <input type="password" name="_password" id="password" class="form-control"
                           autocomplete="current-password"
                           required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}
                    <input type="hidden" name="_target_path" value="/home">

                    <div class="d-grid gap-2 my-3">
                        <button class="btn btn-primary btn-block" type="submit">
                            Войти
                        </button>
                    </div>
                </form>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-12"></div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    <style>
        .login-form {
            background-color: rgb(253, 253, 253);
            margin-top: 15%;
        }
    </style>
{% endblock %}