{% extends 'base.html.twig' %}

{% block title %}Текущие записи{% endblock %}

{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>Услуга</th>
            <th>Клиент</th>
            <th>Комментарий</th>
            <th>Дата</th>
        </tr>
        </thead>
        <tbody>
        {% for appointment in data.appointments %}
        <tr>
            <td>{{ appointment.service }}</td>
            <td>{{ appointment.client }}</td>
            <td>{{ appointment.comment }}</td>
            <td>{{ appointment.data }}</td>
        </tr>
        </tbody>
        {% endfor %}
    </table>
{% endblock %}